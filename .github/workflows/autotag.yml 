name: Auto Create Tag on Push

on:
  push:
    branches: [ "main" ]  # Runs only when pushing to 'main' (change if needed)

jobs:
  create-tag:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0  # Required for tagging

      - name: Get current date for tag
        id: date
        run: echo "TAG_DATE=$(date +'%Y.%m.%d')" >> $GITHUB_OUTPUT

      - name: Create and push tag
        run: |
          git config --global user.name "GitHub Actions"
          git config --global user.email "actions@github.com"
          git tag ${{ steps.date.outputs.TAG_DATE }}
          git push origin ${{ steps.date.outputs.TAG_DATE }}